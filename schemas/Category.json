
{
  "name": "Category",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Category name (e.g., Design, Coding, Productivity)"
    },
    "slug": {
      "type": "string",
      "description": "URL-friendly identifier"
    },
    "description": {
      "type": "string",
      "description": "Brief description of the category"
    },
    "icon": {
      "type": "string",
      "description": "Lucide icon name for the category"
    },
    "color": {
      "type": "string",
      "description": "Hex color for category theming"
    },
    "tool_count": {
      "type": "number",
      "default": 0,
      "description": "Number of tools in this category"
    }
  },
  "required": [
    "name",
    "slug"
  ]
}
